extends layout

block content
  include includes/nav.pug

  body
  h1 Overdue Books
  p
    a.button(href='/books/new') Create New Book

  p
    | Filters
    a(href='/books/all') All
    ||
    a(href='/books/overdue') Overdue
    ||
    a(href='/books/checked') Checked Out
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year Released
    tbody
      each loan in loans
        tr
          td
            a(href='book_detail.html') #{loan.Book.title}
          td=loan.Book.author
          td=loan.Book.genre
          td=loan.Book.first_published
